<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.8"
    android:background="@drawable/myshape"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp" >

            <ImageView
                android:id="@+id/cmclogo"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/cmclogo" />

            <TextView
                android:id="@+id/cmcdelhitext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/cmclogo"
                android:text="CMC Delhi"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blue" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/call"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/cally" />

    <ImageView
        android:id="@+id/browser"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/brow" />

    <ImageView
        android:id="@+id/locationsilent"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/locsil" />

</LinearLayout>